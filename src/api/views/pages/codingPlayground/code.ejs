<%- contentFor("body") %> 

<header class = "header">
    <div class  = "header__container">
        <div class = "infoDiv">
            <button class = "closeBtn btn"><i class="fas fa-times"></i></button>
            <p class = "name">Find the Day of the Week You Were Born</p>
            <button class = "modifiedBtn btn"><i class="fas fa-pen"></i></button>
            <image class = "avatar" src = "/public/assets/images/codingPlayground/gai.jpg"></image>
            <p class = "author">Author: Michael Xanthopoulos</p>
        </div>
        <div class = "functionDiv">
            <button class = "runBtn btn" onclick="run()">Run <i class="fas fa-play"></i></button>
            <button class = "saveBtn btn">Save</button>
            <div class="form-check form-switch" id = "darkSw">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label" for="flexSwitchCheckDefault">Public</label>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input test" type="checkbox" onclick="toggle(this)" id = "darkSw">
                <label class="form-check-label" for="flexSwitchCheckDefault">Dark</label>
            </div>
        </div>
    </div>
    <hr class = "solid">
</header>
<body class = "body"> 
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 code-area">
                <textarea class="rownr" rows="34" cols="3" value="1" readonly tabindex="-1"></textarea>
                <span>
                    <textarea class="txt" rows="34" cols="75" nowrap="nowrap" wrap="off"
                    autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false"
                    onclick="selectionchanged(this)" onkeyup="keyup(this,event)" oninput="input_changed(this)" onscroll="scroll_changed(this)">//Your code here</textarea><br/><br/>
                </span>
            </div>
            <div class="col-lg-6 compile-area">
                <div class="vl"></div>
                    <p class = "inform">
                        CODE COMPILE HERE!!!
                    </p>
            </div>
        </div>
        
    </div>
</body>


<script src="/public/javascripts/code.js">
  
</script>